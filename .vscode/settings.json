{
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/.dart_tool": true,
    ".flatpak/**": true,
    "_build/**": true
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.ts$",
        "cmd": "yarn run build:ts && yarn run shell:restart"
      },
      {
        "match": "\\.css$",
        "cmd": "yarn run build:ts && yarn run shell:restart"
      },
      {
        "match": "\\.xml",
        "cmd": "yarn run build:ts && yarn run shell:restart"
      }
    ]
  }
}